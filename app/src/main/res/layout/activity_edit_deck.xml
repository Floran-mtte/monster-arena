<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context=".EditDeckActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn" />

    <ImageView
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:translationZ="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:srcCompat="@drawable/collection_bg" />

    <Button
        android:id="@+id/bookmark"
        android:layout_width="59dp"
        android:layout_height="81dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bookmark"
        android:translationZ="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <Button
        android:id="@+id/bookmark_quantity"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/red_circle_with_border_gold"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bookmark"
        app:layout_constraintEnd_toEndOf="@+id/bookmark"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bookmark"
        app:layout_constraintTop_toTopOf="@+id/bookmark"
        app:layout_constraintVertical_bias="0.262" />

    <Button
        android:id="@+id/bookmark1"
        android:layout_width="59dp"
        android:layout_height="81dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bookmark"
        android:translationZ="0dp"
        app:layout_constraintStart_toEndOf="@+id/bookmark_quantity"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <Button
        android:id="@+id/bookmark_quantity1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/red_circle_with_border_gold"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bookmark1"
        app:layout_constraintEnd_toEndOf="@+id/bookmark1"
        app:layout_constraintStart_toEndOf="@+id/bookmark1"
        app:layout_constraintTop_toTopOf="@+id/bookmark1"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/bookmark2"
        android:layout_width="59dp"
        android:layout_height="81dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bookmark"
        android:translationZ="0dp"
        app:layout_constraintStart_toEndOf="@+id/bookmark_quantity1"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <Button
        android:id="@+id/bookmark_quantity2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/red_circle_with_border_gold"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bookmark2"
        app:layout_constraintEnd_toEndOf="@+id/bookmark2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bookmark2"
        app:layout_constraintTop_toTopOf="@+id/bookmark2"
        app:layout_constraintVertical_bias="0.262" />

</android.support.constraint.ConstraintLayout>